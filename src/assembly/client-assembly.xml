<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <!-- TODO: a jarjar format would be better -->
  <id>jar-w-deps-client</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>de.dfki.lt.hfc:hfc:*</include>
        <include>org.apache.thrift:libthrift:*</include>
        <include>org.slf4j:slf4j-api:*</include>
        <include>ch.qos.logback:logback-classic:*</include>
        <include>net.sf.jopt-simple:jopt-simple:*</include>
        <include>jline:jline:*</include>
        <include>org.yaml:snakeyaml:*</include>
      </includes>
      <unpackOptions>
        <excludes>
          <exclude>**/logback.xml</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>logback.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>de/dfki/lt/hfc/db/server/ClientAdapter.class</include>
        <include>de/dfki/lt/hfc/db/client/*</include>
        <include>de/dfki/lt/hfc/db/util/*</include>
        <include>de/dfki/lt/hfc/db/ui/*</include>
        <include>de/dfki/lt/hfc/db/rpc/*</include>
        <include>de/dfki/lt/hfc/db/remote/*</include>
        <include>de/dfki/lt/hfc/db/*.class</include>
        <include>icons/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
